<widgets>

    <subcategorylistwidget type="sumoheavy_subcategorylistwidget/list">
        <name>SUMO Heavy: List Subcategories</name>
        <description>This is a widget that pulls the subcategories of a given category.</description>
        <parameters>
            <category_id>
                <label>Category ID (Parent)</label>
                <visible>1</visible>
                <required>1</required>
                <type>text</type>
            </category_id>
            <template>
                <visible>0</visible>
                <value>subcategorylistwidget/list.phtml</value>
            </template>
        </parameters>
    </subcategorylistwidget>

</widgets>
