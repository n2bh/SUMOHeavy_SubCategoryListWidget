<widgets>

    <subcategorylistwidget type="sumoheavy_subcategorylistwidget/category_widget_list">
        <name>SUMO Heavy: List Subcategories</name>
        <description>This is a widget that pulls the subcategories of a given category.</description>
        <parameters>
            <category_path translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Parent Category</label>
                <type>label</type>
                <helper_block>
                    <type>adminhtml/catalog_category_widget_chooser</type>
                    <data>
                        <button translate="open">
                            <open>Parent Category</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>0</sort_order>
            </category_path>
            <template>
                <visible>0</visible>
                <value>subcategorylistwidget/list.phtml</value>
            </template>
        </parameters>
    </subcategorylistwidget>

</widgets>
