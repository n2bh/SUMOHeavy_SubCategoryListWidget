<config>
    <modules>
        <SUMOHeavy_SubCategoryListWidget>
            <version>0.1.0</version>
        </SUMOHeavy_SubCategoryListWidget>
    </modules>

    <global>
        <blocks>
            <sumoheavy_subcategorylistwidget>
                <class>SUMOHeavy_SubCategoryListWidget_Block</class>
            </sumoheavy_subcategorylistwidget>
        </blocks>
        <helpers>
            <sumoheavy_subcategorylistwidget>
                <class>SUMOHeavy_SubCategoryListWidget_Helper</class>
            </sumoheavy_subcategorylistwidget>
        </helpers>
        <resources>
            <sumoheavy_subcategorylistwidget_setup>
                <setup>
                    <module>SUMOHeavy_SubCategoryListWidget</module>
                    <class>Mage_Catalog_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </sumoheavy_subcategorylistwidget_setup>
            <sumoheavy_subcategorylistwidget_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </sumoheavy_subcategorylistwidget_write>
            <sumoheavy_subcategorylistwidget_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </sumoheavy_subcategorylistwidget_read>
        </resources>
    </global>

    <default>
        <sumoheavy_subcategorylistwidget>
            <settings>
                <image_h>135</image_h>
                <image_w>135</image_w>
            </settings>
        </sumoheavy_subcategorylistwidget>
    </default>
</config>
